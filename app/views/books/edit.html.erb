<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
<%= @book.errors.count %>件のerror
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>
  <div class="field">
    <h4>Title<h4>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book'%>
  </div>
<% end %>

<span>
  <%= link_to "Show", book_path %>
</span>

<span>
  <%= link_to "Back", books_path %>
</span>