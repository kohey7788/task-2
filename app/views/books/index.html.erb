<h1>Books</h1>
<% @books.each do |book| %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
<% end %>

<h2>New book</h2>

<%= form_with model: @book, url:'/books', local:true do |f| %>
  <div>
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>
  <div>
    <h4>Body</h4>
  <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create book' %>
<% end %>